doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0', name='viewport')
    title Director | Karibu Grocery Limited
    meta(content='', name='description')
    meta(content='', name='keywords')

    // Favicon
    link(href='/public/images/favicon-32x32.png', rel='icon')
  
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i', rel='stylesheet')

    // Vendor CSS Files
 
    link(href='/animate.css/animate.min.css', rel='stylesheet')
    link(href='/aos/aos.css', rel='stylesheet')
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/bootstrap-icons/bootstrap-icons.css', rel='stylesheet')
    link(href='/boxicons/css/boxicons.min.css', rel='stylesheet')
    link(href='/glightbox/css/glightbox.min.css', rel='stylesheet')
    link(href='/remixicon/remixicon.css', rel='stylesheet')
    link(href='/swiper/swiper-bundle.min.css', rel='stylesheet')
  

    // Main CSS File
    link(href='/css/style.css', rel='stylesheet')
    link(href='/css/login.css', rel='stylesheet')
  body(onload="cursorFocus()")

    header#header.fixed-top.d-flex.align-items-center
        .container.d-flex.align-items-center.justify-content-between
          .logo
            a(href='#')
              img(src='/images/logo.png')
          h2.companyname
            | Karibu Grocery Limited 
            strong 
          nav#navbar.navbar
            ul
              
              li
                a.nav-link(href='/stockreport') Stock Report
              li
                a.nav-link(href='/salesreport') Sales Report
              li
                a.nav-link(href='/creditreport') Credit Report
              li
                a.nav-link(href='userlist') Registered Users
              li 
                
                a.nav-link(href='/logout') Logout
              i.bi.bi-list.mobile-nav-toggle
          // .navbar
 

    main#main
      hr
      // ======= Portfolio Details Section =======
      section#portfolio-details.portfolio-details
        .container
          .row
            .col-lg-4     
                .portfolio-info
                    h3.loginheader Register new KGL user
                    form(action='/register' name='registration' method='POST')
                      ul.userlogin
                          li
                          input(type='text', name='username', placeholder='Username', onblur='validateUser(2, 12, this, errorname)')
                          span#errorname 
                          li
                          input(type='text', name='email', placeholder='Email', onblur='validateEmail(this, erroremail)')
                          span#erroremail
                          li 
                          select(name='role', id='role' onblur='validateRole(errorrole)')
                              option(value='default', name='role') Select Role
                              option(value='agent', name='agent') Sales Agent 
                              option(value='manager', name='manager') Manager
                              option(value='director', name='director') Director
                          span#errorrole
                          li
                          input(type='password', id='password' name='password', placeholder='Password' onblur='validatePassword=(5, this, errorpassword)')
                          span#errorpassword
                          li
                          input(type='password', name='comfirmpassword', placeholder='Comfirm password' onblur='comfirmPassword(this, errorcomfirmpassword)')
                          span#errorcomfirmpassword
                          button(type='submit', onclick='onSubmit()') REGISTER
            .col-lg-8
                .portfolio-details-slider.swiper
                  .swiper-wrapper.align-items-center
                    .swiper-slide
                      img(src='/images/cowpeasCarousel.jpg', alt='cow peas')
                    .swiper-slide
                      img(src='/images/CarouselCorn.jpg', alt='maize')
                    .swiper-slide
                      img(src='/images/cobs-ga806d9049_1920.jpg', alt='beans')
                  .swiper-pagination
    // End #main
    // ======= Footer =======
    footer#footer
      .container
        h3(style='color:#80C41C') Karibu Grocery Limited
        .copyright
          | &copy; Copyright 
          strong
            span Karibu Grocery Limited
          | . All Rights Reserved. Designed by 
          a(href='#') Fredrick Okori
    // End Footer
    a.back-to-top.d-flex.align-items-center.justify-content-center(href='#')
      i.bi.bi-arrow-up-short

    // imported JS Files
    script(src='/aos/aos.js')
    script(src='/bootstrap/js/bootstrap.bundle.min.js')
    script(src='/glightbox/js/glightbox.min.js')
    script(src='/isotope-layout/isotope.pkgd.min.js')
    script(src='/swiper/swiper-bundle.min.js')

    

    // Template Main JS File
    script(src='/js/main.js')
    script(src='/formVal/account.js')